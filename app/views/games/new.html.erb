<h1>New game</h1>
<div style="display: flex; flex-wrap: wrap;">
  <% @letters.each do |letter| %>
    <div class="letters" style="width: 50px; height: 50px; background-color: #3498DB; color: white; margin: 5px; display: flex; align-items: center; justify-content: center; font-size: 20px; border-radius: 5px;">
      <%= letter %>
    </div>
  <% end %>
</div>

<p></p>

<div class="container mt-5">
  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :letters, @letters.join %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="form-group">
      <label for="word" class="form-label">What is the longest word you can find?</label>
      <div class="row">
        <input type="text" name="word" id="word" required class="form-control" />
        <button type="submit" class="btn btn-primary">Play</button>
      </div>
    </div>
  </form>
</div>
